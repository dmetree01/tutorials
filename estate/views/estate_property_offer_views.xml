<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Channel" editable="bottom" decoration-success="status in ('accepted')" decoration-danger="status in ('refused')">
                <field name="price" string="Price"/>
                <field name="partner_id"/>
                <field name="validity" string="Validity (days)"/>
                <field name="date_deadline" string="Deadline"/>
                <button name="accept_offer" string="Accept" type="object" icon="fa-check" invisible="status != False"/>
                <button name="refuse_offer" string="Refuse" type="object" icon="fa-times" invisible="status != False"/>
                <field name="status" optional="hide"/>
                <field name="property_type_id"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="My new house offer">
                <sheet>
                    <group>
                        <group>
                            <field name="price"/>
                        </group>
                        <group>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="validity" string="Validity (days)"/>
                        </group>
                        <group>
                            <field name="date_deadline" string="Deadline"/>
                        </group>
                        <group>
                            <field name="status"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>