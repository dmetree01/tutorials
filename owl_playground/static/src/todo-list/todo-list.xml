<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="owl_playground.todo-list" owl="1">
        <input type="text" placeholder="Enter a new task" t-ref="todoInput" t-on-keyup="addTodo"/>
        <div t-foreach="todos" t-as="todo" t-key="todo.id">
            <Todo todo="todo" toggleState.bind="toggleState" removeTodo.bind="removeTodo"/>
        </div>
    </t>

</templates>
